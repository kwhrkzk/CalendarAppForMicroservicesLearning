<UserControl x:Class="desktop.UserControls.DateControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:desktop.UserControls"
        mc:Ignorable="d">
        <Grid>
            <Rectangle Stroke="Silver" Fill="Silver"/>
            <StackPanel>
                <TextBlock HorizontalAlignment="Left" Text="{Binding 日}" FontSize="20" FontWeight="UltraBold" />
                <ListView ItemsSource="{Binding 要件件名一覧}" />
            </StackPanel>
        </Grid>
</UserControl>
